{
  "version": 2,
  "builds": [{ "src": "server/index.js", "use": "@now/node-server" }],
  "routes": [
    {
      "src": "/",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/movies",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/movies/:id",
      "dest": "/index.js",
      "methods": ["POST"]
    }
  ]
} 